@model IEnumerable<Soledad_Cabrera_Taller_1_deportes.Models.Jugador>

@{
    ViewData["Title"] = "Index";
}

<h1>Jugadores</h1>

<p>
    <a asp-action="Create"class="btn btn-primary">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posición)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posición)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipo.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-secondary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id"class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
